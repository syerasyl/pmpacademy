    <title>PMP Academy</title>

</head>
<body>
<%- include('blocks/header-main') %>
<!--========== CONTENTS ==========-->
<main>
    <section>
        <h1 class="display-5">Passed Tests:</h1>
        <hr>
        <% pass.forEach(function(p) {
        if (p.user._id.equals(user._id)) {
            let scores = 0;
            for (let elem of p.correct) {
                if (elem === 1) {
                    scores++;
                }
            }

        %>
            <a href="/review/<%= p._id %>"><%= p.name %> | Scores: <%= scores %> / <%= p.correct.length %> | Date: <%= p.createdAt %> </a>
            <br>
        <% } %>
        <% }); %>
    </section>
</main>
<script src="/assets/edu-scripts/edu.js"></script>
</body>
</html>

